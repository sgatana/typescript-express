{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "pretty": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "typeRoots": [
      "node_module/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
